generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  channel   String
  rootTs    String
  ts        String
  role      String   // "user" | "assistant"
  user      String?
  text      String
  teamId    String   // Workspace/team identifier
  createdAt DateTime @default(now())
}

model WorkspaceToken {
  id       Int    @id @default(autoincrement())
  teamId   String @unique
  botToken String
}

